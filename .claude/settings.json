{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/mark-lint-needed.sh",
						"timeout": 5
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-stop-lint.sh",
						"timeout": 120
					}
				]
			}
		]
	}
}
